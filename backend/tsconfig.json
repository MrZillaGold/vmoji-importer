{
  "extends": "ts-node/node12/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": "./",
    "outDir": "build",
    "declaration": false,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts"
  ]
}
